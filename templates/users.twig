
{% extends "template.twig" %}

{% block content %}
    
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <a href="/users/add" class="btn btn-primary" style="float:right;">
                    Add User
                </a>
                <b>Users List</b>
            </div>    
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    {% for user in data %}
                        <tr>
                            <th scope="row">{{user.id}}</th>
                            <td>{{user.name}}</td>
                            <td>{{user.email}}</td>
                            <td>No action yet</td>
                        </tr>   
                    {% endfor %}
                </tbody>
              </table>
        </div>
    </div>

{% endblock %}

